import json
import urllib.parse

def lambda_handler(event, context):
  bucket = event['Records'][0]['s3']['bucket']['name']
  key = event['Records'][0]['s3']['object']['key']
  filename = urllib.parse.unquote_plus(key)
  message = f"An Image has been added - {bucket} -> {filename}"
  print(message)
  return {
        'statusCode': 200,
        'body': json.dumps(message)
    }
